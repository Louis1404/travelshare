<%= content_for(:navbar_class, "navbar-home") %>

<div class="white-wrapper">
  <div class="home-made-banner">
    <div class="home-made-banner-image">
       <%= image_tag 'plage.jpg', class: 'image-banner-new-trip' %>
    </div>
    <div class="home-made-banner-image">
       <%= image_tag 'london.jpg', class: 'image-banner-new-trip' %>
    </div>
    <div class="home-made-banner-image">
       <%= image_tag 'montagne.jpg', class: 'image-banner-new-trip' %>
    </div>
    <div class="middle-color">
      <h1>
        Pick your Travel's partner!
      </h1>
    </div>
    <div class="icone-new-trip">
      <i class="fas fa-users"></i>
      <i class="fas fa-map-pin"></i>
      <i class="fas fa-suitcase"></i>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
      </div>
      <div class="col-xs-6">
        <div class="for_render_form">
          <%= render '/shared/form_usersearch' %>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="onboard">
          <% if !@travellers.nil? %>
            <%= link_to "Get on board", trip_path(:id => @trip.id, :travellers => @travellers.pluck('id')), class: 'btn-med' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 trip-creator-col">
        <ul class="list-profiles">
          <% @profiles.each do |profile| %>
            <div class="profile-card">
              <li class="list-profiles">
                <div class="info-user">
                  <div class="profil_avatar_photo">
                    <% if !profile.user.photo_url.nil? %>
                      <%= cl_image_tag(profile.user.photo, class: 'avatar',
                      width: 50, height: 50, crop: :thumb, gravity: :face) %>
                    <% else %>
                      <%= image_tag 'avatar-new-trip.png', class: 'avatar' %>
                    <% end %>
                  </div>
                  <div class="user-name">
                    <p><%= profile.first_name%> <%= profile.last_name %><p>
                  </div>
                  <div class="user-city">
                    <h5> from <%= profile.city.split(",")[0] %><h5>
                  </div>
                  <div class="form-action">
                    <form action=<%= add_travellers_path %>>
                      <% if @trip %>
                        <input type="hidden" name="trip" value=<%= @trip.id %>>
                      <% end %>
                      <input type="hidden" name="profile" value=<%= profile.id %>>
                      <button type="submit" class="btn-small">
                        <i class="fas fa-location-arrow"></i>
                      </button>
                    </form>
                  </div>
                </div>
              </li>
            </div>
          <% end %>
        </ul>
      </div>
      <div class="col-xs-6 trip-creator-col">
        <ul class="list-profiles-right">
          <% if !@travellers.nil? %>
            <% @travellers.each do |t| %>
              <div class="profile-card">
                <li class="list-profiles">
                  <div class="info-user">
                    <div class="profil_avatar_photo">
                      <% if !t.profile.user.photo_url.nil? %>
                        <%= cl_image_tag(t.profile.user.photo, class: 'avatar',
                        width: 50, height: 50, crop: :thumb, gravity: :face) %>
                      <% else %>
                        <%= image_tag 'avatar-new-trip.png', class: 'avatar' %>
                      <% end %>
                    </div>
                    <div class="user-name">
                      <%= t.profile.first_name %>
                      <%= t.profile.last_name %>
                    </div>
                    <div class="user-city">
                      <%= t.profile.city %>
                    </div>
                    <form action=<%= delete_travellers_path %>>
                      <input type="hidden" name="trip" value=<%= @trip.id %>>
                      <input type="hidden" name="traveller" value=<%= t.id %>>
                      <button type="submit" class="btn-small">
                      <i class="fas fa-trash-alt"></i>
                      </button>
                    </form>
                  </div>
                </li>
              </div>
            <% end %>
          <% end %>
        </ul>
        </div>
      </div>
    </div>
  </div>
</div>
