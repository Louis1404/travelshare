
<div class="white-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <h3> Profiles </h3>
        <ul class="list-profiles">
          <% @profiles.each do |profile| %>
            <li class="list-profiles">
              <div class="thin-card">
                <div class="profil_avatar_photo">
                  <%= cl_image_tag(User.find(profile.user_id).photo,
                  width: 100, height: 100, crop: :thumb, gravity: :face) %>
                </div>
                <div class="user-name">
                  <%= profile.first_name%>
                  <%= profile.last_name %>
                </div>
                <div class="user-city">
                  <%= profile.city %>
                </div>
                  <form action=<%= add_travellers_path %>>
                    <% if @trip %>
                      <input type="hidden" name="trip" value=<%= @trip.id %>>
                    <% end %>
                    <input type="hidden" name="profile" value=<%= profile.id %>>
                    <input type="submit" value="+" class="btn btn-success">
                  </form>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="col-xs-6">
        <h3> Travellers </h3>
        <ul class="list-profiles">
          <% if !@travellers.nil? %>
            <% @travellers.each do |t| %>
              <li class="list-profiles">
                <div class="thin-card">
                  <div class="profil_avatar_photo">
                    <%= cl_image_tag(User.find(t.profile.user_id).photo,
                    width: 100, height: 100, crop: :thumb, gravity: :face) %>
                  </div>
                  <div class="user-name">
                    <%= t.profile.first_name %>
                    <%= t.profile.last_name %>
                  </div>
                  <div class="user-city">
                    <%= t.profile.city %>
                  </div>
                  <form action=<%= delete_travellers_path %>>
                    <input type="hidden" name="trip" value=<%= @trip.id %>>
                    <input type="hidden" name="traveller" value=<%= t.id %>>
                    <input type="submit" value="-" class="btn btn-success">
                  </form>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
        <%= link_to "Let's Go", {:controller => "trips", :action => "create", :trip_id => @trip.id, :travellers => @travellers}, :method=>:post %>
        <%= simple_form_for @trip do |f| %>
          <%= f.input :id, :as => :hidden %>
          <%= f.submit class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>


