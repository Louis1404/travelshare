
<div class="white-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <h3> Profiles </h3>
        <ul class="list-profiles">
          <% @profiles.each do |profile| %>
            <div class="thin-card">
              <li class="list-profiles"></li>
              <div class="profil_avatar_photo">
                <%= cl_image_tag(User.find(profile.user_id).photo,
                width: 100, height: 100, crop: :thumb, gravity: :face) %>
              </div>
              <div class="user-name">
                <%= profile.first_name%>
                <%= profile.last_name %>
              </div>
              <div class="user-city">
                <%= profile.city %>
              </div>
            </div>
          <% end %>
        </ul>
      </div>
      <div class="container">
        <%= simple_form_for @trip do |f| %>
          <%= select_tag "travellers[profile_1]", options_for_select(Profile.all.collect{ |u| [u.first_name, u.id]}) %>
          <%= select_tag "travellers[profile_2]", options_for_select(Profile.all.collect{ |u| [u.first_name, u.id]}) %>
          <%= select_tag "travellers[profile_3]", options_for_select(Profile.all.collect{ |u| [u.first_name, u.id]}) %>
          <%= f.imput type:"hidden" id:@trip.id %>
          <%= f.submit class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>


