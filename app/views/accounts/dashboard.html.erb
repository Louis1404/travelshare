<div class="white-wrapper">
  <div class="container">
    <h1>Your trips saved</h1>
    <div class="row">
      <% @trips.each do |trip| %>
        <% if !trip.destination.nil? %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="city-card-info">
              <div class="city-card" style="background-image: linear-gradient(150deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url(<%= asset_url(trip.destination.downcase + '.jpg')%>)">
                <div class="card-category">
                  <p><strong><%= trip.destination %></strong></p>
                </div>
              </div>

              <div class="action-card">
                <div class="card-icone">
                  <button type="submit" class="btn-small">
                  <i class="fas fa-search"></i>
                  </button>
                  <%= link_to "book it", "",class: "book-it" %>
                  <button type="submit" class="btn-small">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </div>
              </div>

            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>






