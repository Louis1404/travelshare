<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <h2>Edit your profile</h2>
        <%= simple_form_for(current_user, url: user_registration_path, method: :put) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :first_name,
                    required: true,
                    autofocus: true ,
                    input_html: { autocomplete: "first_name" }%>

            <%= f.input :last_name,
                    required: true,
                    autofocus: true ,
                    input_html: { autocomplete: "last_name" }%>

            <%= f.input :email, required: true, autofocus: true %>

            <%= f.input :city,
                    hint: "leave it blank if you don't want to change it",
                    required: false %>

        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true %>


              <%= f.input :new_password,
                      hint: "leave it blank if you don't want to change it",
                      required: false %>

          <%= f.input :new_password_confirmation,
                      required: false %>

            <%= f.input :photo %>
            <%= f.error_notification message: 'Something went wrong' %>
            <%= f.input :photo_cache, as: :hidden %>


    <div class="form-actions">
      <%= f.button :submit, "Edit", class: "card-submit" %>
    </div>
  <% end %>
</div>

<p>Unhappy?<%= link_to "Cancel my account", registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete %></p>
