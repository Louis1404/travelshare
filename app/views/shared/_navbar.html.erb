<div class="navbar-travel <%= yield(:navbar_class) %>">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-travel-brand" do %>
    <%= image_tag "logo.png", class:"navbar-travel-brand" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-travel-right">

    <% if user_signed_in? %>
        <%= link_to "Create a Trip", new_trip_path, class: "navbar-travel-item navbar-travel-link" %>

        <!-- Profile picture with dropdown list -->
        <div class="navbar-travel-item">
          <div class="dropdown">
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-travel-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-travel-dropdown-menu">
              <li>
                <%= link_to dashboard_path do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to dashboard_path do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Dashboard") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i> <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    <% else %>
      <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-travel-item navbar-travel-link"  %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-travel-item navbar-travel-link" %>
    <% end %>
  </div>
</div>
